<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="garcia.martinez.daniel.examapplication.DateActivity">

    <EditText
        android:id="@+id/edit_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/btn_choose"
        android:layout_alignEnd="@+id/btn_choose"
        android:layout_alignStart="@+id/edit_day" />

    <Button
        android:id="@+id/btn_resta"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/resta"
        android:layout_alignBaseline="@+id/btn_suma"
        android:layout_alignBottom="@+id/btn_suma"
        android:layout_toStartOf="@+id/btn_suma"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_suma"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/edit_day"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="@string/suma" />

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_suma"
        android:layout_alignStart="@+id/btn_resta"
        android:layout_below="@+id/btn_resta"
        android:layout_marginTop="22dp"
        android:text="@string/choose" />

    <TextView
        android:id="@+id/day_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_day"
        android:layout_alignBottom="@+id/edit_day"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:text="@string/day"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/year_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_year"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15dp"
        android:text="@string/year"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/month_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/year_txt"
        android:layout_alignTop="@+id/btn_choose"
        android:layout_marginTop="13dp"
        android:text="@string/month"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/actual_month_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/month_txt"
        android:layout_alignStart="@+id/edit_year"
        android:layout_toStartOf="@+id/btn_choose"
        android:textSize="20sp" />

    <Button
        android:id="@+id/today_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/today" />

    <Button
        android:id="@+id/toast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/toast" />
</RelativeLayout>
